<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#35000000">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/content_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_73"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/wx_call_ll"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_200"
            android:layout_marginStart="@dimen/dp_39"
            android:layout_weight="1"
            android:background="@drawable/wx_calling_type_bg"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_77"
                android:layout_height="@dimen/dp_66"
                android:src="@mipmap/wx_call_type_icon" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sp_25"
                android:text="微信通话"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/wx_not_call_ll"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_200"
            android:layout_marginStart="@dimen/dp_39"
            android:layout_weight="1"
            android:background="@drawable/wx_call_not_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/dp_39">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_77"
                android:layout_height="@dimen/dp_66"
                android:src="@mipmap/wx_call_type_not_icon" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sp_25"
                android:text="微信通话"
                android:textColor="#BFBFBF"
                android:textSize="@dimen/sp_18" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/te_call_ll"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_200"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_39"
            android:layout_weight="1"
            android:background="@drawable/phone_type_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_39">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_77"
                android:layout_height="@dimen/dp_66"
                android:src="@mipmap/phone_type_icon" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sp_25"
                android:text="手机通话"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/close_type_iv"
        android:layout_width="@dimen/dp_36"
        android:layout_height="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_40"
        android:src="@mipmap/close_round"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/content_ll" />


</androidx.constraintlayout.widget.ConstraintLayout>